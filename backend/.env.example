# Environment Configuration
ENVIRONMENT=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/meal-planner

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-at-least-32-characters-long

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=info

# Database Seeding (set to true to seed default dishes on startup)
SEED_DATABASE=true
LOG_FORMAT=json

# Server Configuration
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s
MAX_HEADER_BYTES=1048576

# Database Connection Pool
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=1
DB_MAX_IDLE_TIME=60s
